{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "backtick", "jsx-double"],
    "semicolon": false,
    // not working
    // "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [
      true, {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}